<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="grid.cfg" class="org.apache.ignite.configuration.IgniteConfiguration">
        <property name="userAttributes">
            <map key-type="java.lang.String" value-type="java.lang.Boolean">
                <entry key="data.node" value="true"/>
            </map>
        </property>
        <property name="peerClassLoadingEnabled" value="true"/>
        <property name="discoverySpi">
            <bean class="org.apache.ignite.spi.discovery.zk.ZookeeperDiscoverySpi">
                <property name="zkConnectionString" value="zoo1:2181"/>
                <property name="sessionTimeout" value="30000"/>
                <property name="zkRootPath" value="/ignite"/>
                <property name="joinTimeout" value="10000"/>
            </bean>
        </property>
        <!--Caches-->
        <property name="cacheConfiguration">
            <list>
                <bean class="org.apache.ignite.configuration.CacheConfiguration">
                    <property name="name" value="LatestMonitoring"/>
                    <property name="cacheMode" value="LOCAL"/>
                </bean>
                <bean class="org.apache.ignite.configuration.CacheConfiguration">
                    <property name="name" value="Metadata"/>
                    <property name="cacheMode" value="PARTITIONED"/>
                    <property name="backups" value="1"/>
                </bean>
            </list>
        </property>
        <!--Persistence region-->
        <!--<property name="dataStorageConfiguration">
            <bean class="org.apache.ignite.configuration.DataStorageConfiguration">
                <property name="dataRegionConfigurations">
                    <list>
                        <bean class="org.apache.ignite.configuration.DataRegionConfiguration">
                            <property name="name" value="Persistent_Region" />
                            <property name="persistenceEnabled" value="true" />
                        </bean>
                    </list>
                </property>
            </bean>
        </property>-->
        <!--Services-->
        <property name="serviceConfiguration">
            <list>
                <bean class="org.apache.ignite.services.ServiceConfiguration">
                    <!-- Unique service name -->
                    <property name="name" value="DataService"/>
                    <property name="service">
                        <bean class="org.auth.csd.datalab.DataService"/>
                    </property>
                    <!-- Only one instance of the service can be deployed on a single node. -->
                    <property name="maxPerNodeCount" value="1"/>
                    <property name="nodeFilter">
                        <bean class="org.auth.csd.datalab.common.filter.DataFilter"/>
                    </property>
                </bean>
                <bean class="org.apache.ignite.services.ServiceConfiguration">
                    <!-- Unique service name -->
                    <property name="name" value="RebalanceService"/>
                    <property name="service">
                        <bean class="org.auth.csd.datalab.RebalanceService"/>
                    </property>
                    <!-- Only one instance of the service can be deployed on a single node. -->
                    <property name="maxPerNodeCount" value="1"/>
                    <property name="nodeFilter">
                        <bean class="org.auth.csd.datalab.common.filter.DataFilter"/>
                    </property>
                </bean>
            </list>
        </property>
        <property name="consistentId" value="true" />
    </bean>
</beans>
